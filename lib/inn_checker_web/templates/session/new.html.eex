<h1>Вход</h1>

<%= form_for @conn, Routes.session_path(@conn, :create), [as: :session], fn f -> %>
  <div class="form-group">
    <%= text_input f, :email, placeholder: "Email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= password_input f, :password, placeholder: "Пароль", class: "form-control" %>
  </div>

  <%= submit "Войти", class: "btn btn-primary" %>


<% end %>
